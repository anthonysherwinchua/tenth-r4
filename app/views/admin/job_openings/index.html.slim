= render 'layouts/admin/breadcrumb'

.container
  .row
    .col-xs-12
      table.table.table-hover.table-striped.table-condensed
        thead
          tr
            th Country
            th Occupation
            th width="20%"

        tbody
          - @current_items.each do |current_item|
            tr
              td = current_item.country.name
              td = current_item.occupation.name
              td
                = render 'admin/base/buttons', current_item: current_item

